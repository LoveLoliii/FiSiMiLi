<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
>
    <data>
        <import type="android.view.View"/>
        <variable name="viewModel" type="com.summersama.fisimili.ui.search.SearchViewModel"/>
        <!-- <variable name="resId" type="Integer" />
         <variable name="init" type="Boolean" />-->
    </data>
    <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            app:cardCornerRadius="8dp">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical"
                      android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:id="@+id/rvi_title_tx"
                    android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="4"
                    android:text="1"
                    android:gravity="center"
                    android:layout_gravity="center"
            />
            <TextView
                    android:textColor="@color/grey"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:id="@+id/rvi_more_text"
                    android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="更多"/>
        </LinearLayout>

        <!-- <TextView
             android:textColor="#FFFFFF"
             android:text="\?"
             android:id="@+id/rvi_body_tx"
             android:layout_width="match_parent" android:layout_height="wrap_content"/>-->

    </androidx.cardview.widget.CardView>
</layout>